<h1>Clients</h1>

<% if @clients.any?() %>
  <h3>Here are your clients:</h3>

  <ul>
    <% @clients.each() do |client| %>
      <li><a href="/clients/<%= client.id()%>"><%= client.name() %></a> </li>
    <% end %>
  </ul>

<% else %>

    <p>There are no clients yet!</p>

<% end %>

<hr>

<div class="container">
  <button><a href="/stylists">View All Stylists</a></button>
  <button><a href="/stylists/new">Add New Stylist</a></button>
  <hr>
  <button><a href="/clients">View All Clientss</a></button>
  <button><a href="/clients/new">Add New Clients</a></button>
</div>
