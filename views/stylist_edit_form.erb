<h3>Update Stylist Information</h3>

<form action="/stylists/<%= @stylist.id() %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for='name'>Name:</label>
  <input id='name' name='name' type='text'>


  <button type="submit">Update Stylist</button>
</form>

<form action="/stylists/<%= @stylist.id() %>/delete" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Stylist</button>
</form>
